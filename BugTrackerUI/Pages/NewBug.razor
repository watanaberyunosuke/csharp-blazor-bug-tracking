@page "/new-bug"

<h3>Add New Bug</h3>

<EditForm Model="@AddBug">
    <InputText @bind-value=Title placeholder="Enter Title"></InputText>
    <InputText @bind-value=Description placeholder="Enter Description"></InputText>
    <InputText @bind-value=Priority placeholder="Enter Priority"></InputText>
    <button type="submit">Add Bug</button>
</EditForm>

@code {
    public Bug AddBug() { return new Bug(); }
}